{
	"name": "sfx-toolkit",
	"displayName": "Adure SFX Toolkit",
	"publisher": "AdureIO",
	"description": "Utilities for Salesforce development: Log filtering, Debug Traces, Deployment, and more.",
	"icon": "resources/icon.png",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.80.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/AdureIO/SFX-Toolkit.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "adure-sfx-toolkit.filterLogDebug",
				"title": "ASFXT: Filter Debug",
				"icon": {
					"light": "resources/light/debug-inactive.svg",
					"dark": "resources/dark/debug-inactive.svg"
				}
			},
			{
				"command": "adure-sfx-toolkit.filterLogDebugActive",
				"title": "ASFXT: Filter Debug (Active)",
				"icon": {
					"light": "resources/light/debug-active.svg",
					"dark": "resources/dark/debug-active.svg"
				}
			},
			{
				"command": "adure-sfx-toolkit.filterLogSOQL",
				"title": "ASFXT: Filter SOQL/DML",
				"icon": {
					"light": "resources/light/soql-inactive.svg",
					"dark": "resources/dark/soql-inactive.svg"
				}
			},
			{
				"command": "adure-sfx-toolkit.filterLogSOQLActive",
				"title": "ASFXT: Filter SOQL/DML (Active)",
				"icon": {
					"light": "resources/light/soql-active.svg",
					"dark": "resources/dark/soql-active.svg"
				}
			},
			{
				"command": "adure-sfx-toolkit.refreshLogs",
				"title": "ASFXT: Refresh Logs",
				"icon": "$(refresh)"
			},
			{
				"command": "adure-sfx-toolkit.openLog",
				"title": "ASFXT: Open Log"
			},
			{
				"command": "adure-sfx-toolkit.listLogs",
				"title": "ASFXT: List and Open Logs"
			},
			{
				"command": "adure-sfx-toolkit.addDebugTrace",
				"title": "ASFXT: New Trace",
				"icon": "$(plus)"
			},
			{
				"command": "adure-sfx-toolkit.quickTrace",
				"title": "ASFXT: Quick Trace (Current User)",
				"icon": "$(zap)"
			},
			{
				"command": "adure-sfx-toolkit.deleteAllLogs",
				"title": "ASFXT: Delete All Logs",
				"icon": "$(trash)"
			},
			{
				"command": "adure-sfx-toolkit.startPolling",
				"title": "ASFXT: Start Polling",
				"icon": "$(play)"
			},
			{
				"command": "adure-sfx-toolkit.stopPolling",
				"title": "ASFXT: Stop Polling",
				"icon": "$(debug-stop)"
			},
			{
				"command": "adure-sfx-toolkit.deleteTrace",
				"title": "ASFXT: Delete Trace",
				"icon": "$(trash)"
			},
			{
				"command": "adure-sfx-toolkit.refreshTraces",
				"title": "ASFXT: Refresh Traces",
				"icon": "$(refresh)"
			},
			{
				"command": "adure-sfx-toolkit.deployClasses",
				"title": "ASFXT: Deploy Classes"
			},
			{
				"command": "adure-sfx-toolkit.executeAnonymous",
				"title": "ASFXT: Execute Anonymous Apex",
				"icon": "$(play)"
			},
			{
				"command": "adure-sfx-toolkit.rerunLastApex",
				"title": "ASFXT: Rerun Last Apex",
				"icon": "$(debug-restart)"
			},
			{
				"command": "adure-sfx-toolkit.executeSOQL",
				"title": "ASFXT: Execute SOQL Query"
			},
			{
				"command": "adure-sfx-toolkit.refreshOrgs",
				"title": "ASFXT: Refresh Orgs",
				"icon": "$(refresh)"
			},
			{
				"command": "adure-sfx-toolkit.openOrg",
				"title": "ASFXT: Open Org",
				"icon": "$(globe)"
			},
			{
				"command": "adure-sfx-toolkit.setAsDefaultOrg",
				"title": "ASFXT: Set as Default",
				"icon": "$(check)"
			},
			{
				"command": "adure-sfx-toolkit.setAsDefaultDevHub",
				"title": "ASFXT: Set as Default Dev Hub",
				"icon": "$(hub)"
			},
			{
				"command": "adure-sfx-toolkit.copyUsername",
				"title": "ASFXT: Copy Username",
				"icon": "$(copy)"
			},
			{
				"command": "adure-sfx-toolkit.renameAlias",
				"title": "ASFXT: Rename Alias",
				"icon": "$(edit)"
			},
			{
				"command": "adure-sfx-toolkit.generatePassword",
				"title": "ASFXT: Generate Password",
				"icon": "$(key)"
			},
			{
				"command": "adure-sfx-toolkit.deleteOrg",
				"title": "ASFXT: Delete/Logout",
				"icon": "$(trash)"
			},
			{
				"command": "adure-sfx-toolkit.connectOrg",
				"title": "ASFXT: Connect Org",
				"icon": "$(plug)"
			},
			{
				"command": "adure-sfx-toolkit.openPermissionSetUI",
				"title": "ASFXT: Open in Permission UI",
				"icon": "$(edit)"
			},
			{
				"command": "adure-sfx-toolkit.createScratch",
				"title": "ASFXT: Create Scratch Org",
				"icon": "$(beaker)"
			},
			{
				"command": "adure-sfx-toolkit.quickScratch",
				"title": "ASFXT: Quick Scratch (Defaults)",
				"icon": "$(rocket)"
			}
		],
		"languages": [
			{
				"id": "salesforce-log",
				"aliases": [
					"Salesforce Log",
					"sf-log"
				],
				"extensions": [
					".log"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "salesforce-log",
				"scopeName": "source.salesforce-log",
				"path": "./syntaxes/salesforce-log.tmLanguage.json"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "adure-sfx-toolkit-activitybar",
					"title": "Adure SFX Toolkit",
					"icon": "resources/dark/sidebar.png"
				}
			]
		},
		"views": {
			"adure-sfx-toolkit-activitybar": [
				{
					"id": "adure-sfx-toolkit.logs",
					"name": "Logs"
				},
				{
					"id": "adure-sfx-toolkit.traces",
					"name": "Debug Traces"
				},
				{
					"id": "adure-sfx-toolkit.orgs",
					"name": "Orgs"
				},
				{
					"id": "adure-sfx-toolkit.development",
					"name": "Development"
				}
			]
		},
		"keybindings": [
			{
				"command": "adure-sfx-toolkit.filterLogDebug",
				"key": "cmd+d",
				"mac": "cmd+d",
				"win": "ctrl+d",
				"linux": "ctrl+d",
				"when": "editorTextFocus && adure-sfx-toolkit:isLogFile"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "adure-sfx-toolkit.refreshLogs",
					"when": "view == adure-sfx-toolkit.logs",
					"group": "navigation"
				},
				{
					"command": "adure-sfx-toolkit.deleteAllLogs",
					"when": "view == adure-sfx-toolkit.logs",
					"group": "navigation"
				},
				{
					"command": "adure-sfx-toolkit.startPolling",
					"when": "view == adure-sfx-toolkit.logs && !adure-sfx-toolkit:polling",
					"group": "navigation"
				},
				{
					"command": "adure-sfx-toolkit.stopPolling",
					"when": "view == adure-sfx-toolkit.logs && adure-sfx-toolkit:polling",
					"group": "navigation"
				},
				{
					"command": "adure-sfx-toolkit.refreshTraces",
					"when": "view == adure-sfx-toolkit.traces",
					"group": "navigation"
				},
				{
					"command": "adure-sfx-toolkit.quickTrace",
					"when": "view == adure-sfx-toolkit.traces",
					"group": "navigation"
				},
				{
					"command": "adure-sfx-toolkit.addDebugTrace",
					"when": "view == adure-sfx-toolkit.traces",
					"group": "navigation"
				},
				{
					"command": "adure-sfx-toolkit.refreshOrgs",
					"when": "view == adure-sfx-toolkit.orgs",
					"group": "navigation"
				},
				{
					"command": "adure-sfx-toolkit.connectOrg",
					"when": "view == adure-sfx-toolkit.orgs",
					"group": "navigation"
				},
				{
					"command": "adure-sfx-toolkit.createScratch",
					"when": "view == adure-sfx-toolkit.orgs",
					"group": "navigation"
				},
				{
					"command": "adure-sfx-toolkit.quickScratch",
					"when": "view == adure-sfx-toolkit.orgs",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "adure-sfx-toolkit.deleteTrace",
					"when": "view == adure-sfx-toolkit.traces",
					"group": "inline"
				},
				{
					"command": "adure-sfx-toolkit.openOrg",
					"when": "view == adure-sfx-toolkit.orgs && viewItem =~ /org-*/",
					"group": "inline"
				},
				{
					"command": "adure-sfx-toolkit.setAsDefaultOrg",
					"when": "view == adure-sfx-toolkit.orgs && viewItem =~ /org-*/",
					"group": "inline"
				},
				{
					"command": "adure-sfx-toolkit.setAsDefaultDevHub",
					"when": "view == adure-sfx-toolkit.orgs && viewItem == org-devhub",
					"group": "inline"
				},
				{
					"command": "adure-sfx-toolkit.renameAlias",
					"when": "view == adure-sfx-toolkit.orgs && viewItem =~ /org-*/",
					"group": "1_modify"
				},
				{
					"command": "adure-sfx-toolkit.generatePassword",
					"when": "view == adure-sfx-toolkit.orgs && viewItem =~ /org-*/",
					"group": "1_modify"
				},
				{
					"command": "adure-sfx-toolkit.copyUsername",
					"when": "view == adure-sfx-toolkit.orgs && viewItem =~ /org-*/",
					"group": "2_copy"
				},
				{
					"command": "adure-sfx-toolkit.deleteOrg",
					"when": "view == adure-sfx-toolkit.orgs && viewItem == org-scratch",
					"group": "3_danger"
				},
				{
					"command": "adure-sfx-toolkit.deleteOrg",
					"when": "view == adure-sfx-toolkit.orgs && (viewItem == org-connected || viewItem == org-devhub)",
					"group": "3_danger"
				}
			],
			"editor/title": [
				{
					"command": "adure-sfx-toolkit.executeAnonymous",
					"when": "resourceLangId == apex",
					"group": "navigation@1"
				},
				{
					"command": "adure-sfx-toolkit.rerunLastApex",
					"when": "resourceScheme == sf-anon-log",
					"group": "navigation@1"
				},
				{
					"command": "adure-sfx-toolkit.filterLogDebug",
					"when": "(resourceScheme == sf-log || resourceScheme == sf-anon-log) && !adure-sfx-toolkit:filterDebug",
					"group": "navigation@2"
				},
				{
					"command": "adure-sfx-toolkit.filterLogDebugActive",
					"when": "(resourceScheme == sf-log || resourceScheme == sf-anon-log) && adure-sfx-toolkit:filterDebug",
					"group": "navigation@2"
				},
				{
					"command": "adure-sfx-toolkit.filterLogSOQL",
					"when": "(resourceScheme == sf-log || resourceScheme == sf-anon-log) && !adure-sfx-toolkit:filterSOQL",
					"group": "navigation@3"
				},
				{
					"command": "adure-sfx-toolkit.filterLogSOQLActive",
					"when": "(resourceScheme == sf-log || resourceScheme == sf-anon-log) && adure-sfx-toolkit:filterSOQL",
					"group": "navigation@3"
				},
				{
					"command": "adure-sfx-toolkit.openPermissionSetUI",
					"when": "resourceFilename =~ /\\.permissionset-meta\\.xml$/",
					"group": "navigation@4"
				}
			],
			"commandPalette": [
				{
					"command": "adure-sfx-toolkit.filterLogDebug",
					"when": "false"
				},
				{
					"command": "adure-sfx-toolkit.filterLogDebugActive",
					"when": "false"
				},
				{
					"command": "adure-sfx-toolkit.filterLogSOQL",
					"when": "false"
				},
				{
					"command": "adure-sfx-toolkit.filterLogSOQLActive",
					"when": "false"
				}
			]
		},
		"customEditors": [
			{
				"viewType": "adure-sfx-toolkit.permissionSetEditor",
				"displayName": "Permission Set Editor",
				"selector": [
					{
						"filenamePattern": "*.permissionset-meta.xml"
					}
				],
				"priority": "option"
			},
			{
				"viewType": "adure-sfx-toolkit.scratchOrgDefEditor",
				"displayName": "Scratch Org Definition Editor",
				"selector": [
					{
						"filenamePattern": "*-scratch-def.json"
					},
					{
						"filenamePattern": "project-scratch-def.json"
					}
				],
				"priority": "default"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.1",
		"@types/node": "^20.2.5",
		"@types/vscode": "^1.80.0",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"@vscode/test-electron": "^2.3.2",
		"eslint": "^8.41.0",
		"mocha": "^10.2.0",
		"typescript": "^5.1.3"
	},
	"dependencies": {
		"fast-xml-parser": "^5.3.2",
		"glob": "^8.1.0"
	}
}
